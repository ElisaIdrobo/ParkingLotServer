  <style>
  body {
  background: #232323;
  text-align: center;
}

#threeD {
  color: #fff;
  opacity: 0.1;
  font-size: 32px;
  font-weight: bold;
  padding: 20px 0;
  display: inline-block;
  -webkit-transition: all 0.2 ease;
          transition: all 0.2 ease;
  position: absolute;
  top: 0;
  z-index: 50;
}
#threeD:hover {
  opacity: 0.5;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  -webkit-perspective: 1000px;
          perspective: 1000px;
  -webkit-transform-style: preserve-3d;
          transform-style: preserve-3d;
}
.wrapper:hover .canvas .layer {
  outline: 2px solid;
  background-color: rgba(0, 0, 0, 0.1);
}
.wrapper:hover .canvas .layer:before {
  opacity: 1;
}
.wrapper:hover .canvas #layer_1 {
  outline-color: red;
  -webkit-transform: translateZ(50px);
          transform: translateZ(50px);
}
.wrapper:hover .canvas #layer_2 {
  outline-color: blue;
  -webkit-transform: translateZ(100px);
          transform: translateZ(100px);
}
.wrapper:hover .canvas #layer_3 {
  outline-color: green;
  -webkit-transform: translateZ(150px);
          transform: translateZ(150px);
}

.canvas {
  pointer-events: none;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -240px 0 0 -320px;
  width: 640px;
  height: 480px;
  background: #f0f0f0;
  -webkit-transform: rotateX(0deg);
          transform: rotateX(0deg);
  -webkit-transform-style: preserve-3d;
          transform-style: preserve-3d;
}
.canvas .layer {
  position: absolute;
  width: 100%;
  height: 100%;
  -webkit-transition: all 0.5s ease;
          transition: all 0.5s ease;
}
.canvas .layer:before {
  position: absolute;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px 5px 0 0;
  padding: 5px 0px;
  width: 100px;
  text-align: center;
  font-size: 12px;
  opacity: 0;
  -webkit-transition: opacity 0.2s ease;
          transition: opacity 0.2s ease;
}
.canvas .layer#layer_1:before {
  content: "Layer 1";
}
.canvas .layer#layer_2:before {
  content: "Layer 2";
}
.canvas .layer#layer_3:before {
  content: "Layer 3";
  left: 0px;
}

  </style>

